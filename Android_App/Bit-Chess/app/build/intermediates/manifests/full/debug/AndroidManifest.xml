<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.vlo.bit_chess.bit_chess"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_figura"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pl.vlo.bit_chess.bit_chess.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="pl.vlo.bit_chess.bit_chess.ChooseColorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="pl.vlo.bit_chess.bit_chess.SettingsActivity"
            android:label="Ustawienia"
            android:screenOrientation="portrait" />
        <activity
            android:name="pl.vlo.bit_chess.bit_chess.BluetoothActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.vlo.bit_chess.bit_chess.Game"
            android:screenOrientation="portrait" />
        <activity
            android:name="pl.vlo.bit_chess.bit_chess.GameActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pl.vlo.bit_chess.bit_chess.Clocks"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>